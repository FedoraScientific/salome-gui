# source path
top_srcdir=@top_srcdir@
top_builddir=../..
srcdir=@srcdir@
VPATH=.:@srcdir@

SUBDIRS= tui gui

@COMMENCE@

docs:
	@@SETX@; for d in $(SUBDIRS); do 	\
	   (cd $$d && $(MAKE) $@) || exit 1; 	\
	done; \
	cp -f $(srcdir)/GUI_index.html GUI_index.html

clean:
	@@SETX@; for d in $(SUBDIRS); do 	\
	   (cd $$d && $(MAKE) $@) || exit 1; 	\
	done

distclean: clean
	@@SETX@; for d in $(SUBDIRS); do 	\
	   (cd $$d && $(MAKE) $@) || exit 1; 	\
	done

install:
	$(MAKE) docs
	(cd tui && $(MAKE) install);
	(cd gui && $(MAKE) install);
	cp -f GUI_index.html $(docdir)

uninstall:
	@@SETX@; for d in $(SUBDIRS); do 	\
	   (cd $$d && $(MAKE) $@) || exit 1; 	\
	done; \
	rm -fr $(docdir)/GUI_index.html
