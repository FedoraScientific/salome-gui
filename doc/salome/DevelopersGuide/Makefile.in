top_srcdir=@top_srcdir@
top_builddir=../../..
srcdir=@srcdir@
VPATH=.:@srcdir@


TEX=DevelopersGuide.tex
TEX_PS=$(TEX:%.tex=%.ps)
TEX_PDF=$(TEX:%.tex=%.pdf)

.SUFFIXES: .tex .dvi .ps .pdf

docs: $(TEX_PS) clean $(TEX_PDF) clean

clean:
	\rm -f *~ *.bak *.aux *.log *.dvi *.toc $(TEX:%.tex=%.out)
	\rm -f dummy thumb*

distclean: clean
	\rm -f $(TEX_PS) $(TEX_PDF)

install:

#implicits rules
.tex.dvi: clean
	@[ "x@LATEX@" != "x" ] && [ latex $< ] || \
	echo "Can'not execute .tex.dvi rule"

.dvi.ps:
	@[ "x@DVIPS@" != "x" ] && [ dvips $< -o $@ ] || \
	echo "Can'not execute .dvi.ps rule"

.tex.pdf: clean
	@[ "x@PDFLATEX@" != "x" ] && [ pdflatex $< ] || \
	echo "Can'not execute .tex.pdf rule"

